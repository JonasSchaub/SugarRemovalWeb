        <developerConnection>scm:git:git@github.com:JonasSchaub/SugarRemovalWeb.git</developerConnection>
        <tag>HEAD</tag>
    </scm>

    <issueManagement>
        <url>https://github.com/JonasSchaub/SugarRemovalWeb/issues</url>
    </issueManagement>

    <developers>
        <developer>
            <name>Jonas Schaub</name>
